@model IEnumerable<Employee_Management_Peoject.Models.Skill>
@{
    ViewBag.Title = "Index";
}
<div class="row">
    <div class="col">
        @using (Ajax.BeginForm("Index", "Skill", new AjaxOptions { UpdateTargetId = "search", HttpMethod = "POST", InsertionMode = InsertionMode.Replace }))
        {
            <div class="mb-3 d-flex offset-10 justify-content-end">
                <input type="text" name="skill" class="form-control" placeholder="Skill name....">
                <button class="btn btn-outline-info" type="submit">Search</button>
            </div>
        }
    </div>
   </div>
    <h2 class="display-4 text-center">Skill List</h2>
    <div class="d-flex justify-content-end mb-3">
        <a href="@Url.Action("Create","Skill")" class="btn btn-primary btn-sm"><i class="fa fa-plus-circle"></i>Add New Skill</a>
    </div>

    <div class="d-flex justify-content-between">
        <table class="table table-bordered table-striped table-sm  table-hover">
            <thead class="table-info">
                <tr>
                    <th>Skill Id</th>
                    <th>Skill Name</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(x => item.SkillId)</td>
                        <td>@Html.DisplayFor(x => item.SkillName)</td>
                        <td>
                            <a href="@Url.Action("Edit", "Skill", new {id=item.SkillId})" class="btn btn-outline-success"><i class="fa fa-pencil"></i></a>
                            <a href="@Url.Action("Delete", "Skill", new {id=item.SkillId})" class="btn btn-outline-danger"><i class="fa fa-trash"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>




